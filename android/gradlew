#!/usr/bin/env sh
##########################################################################
# Gradle wrapper bootstrap script.
# It expects gradle/wrapper/gradle-wrapper.jar; if missing, Android Studio
# will download it automatically on first sync.
##########################################################################
DIR="$(cd "$(dirname "$0")" && pwd)"
JAR="$DIR/gradle/wrapper/gradle-wrapper.jar"
if [ ! -f "$JAR" ]; then
  echo "gradle-wrapper.jar not found. If you're running inside Android Studio, press 'Sync' and it will download the wrapper automatically."
  echo "Otherwise install Gradle or generate wrapper with 'gradle wrapper'."
  exit 1
fi
exec java -jar "$JAR" "$@"
